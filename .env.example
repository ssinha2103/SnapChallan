# Environment Variables for SnapChallan

# Django Settings
DEBUG=True
SECRET_KEY=your-super-secret-key-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database Configuration
MONGO_DB_NAME=snapchallan
MONGO_URI=mongodb://localhost:27017/snapchallan
MONGO_USER=
MONGO_PASSWORD=
MONGO_AUTH_SOURCE=admin
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=admin123

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=redis123

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# GridFS Configuration
GRIDFS_DATABASE=snapchallan_media
GRIDFS_COLLECTION=fs

# External API Keys
UIDAI_API_BASE_URL=https://resident.uidai.gov.in/otp-api/
UIDAI_API_KEY=your-uidai-api-key

# MoRTH Integration
MORTH_API_BASE_URL=https://parivahan.gov.in/api/
MORTH_API_KEY=your-morth-api-key

# Payment Gateway (Razorpay)
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-secret
UPI_WEBHOOK_SECRET=your-upi-webhook-secret

# SMS Gateway
SMS_API_URL=https://api.textlocal.in/send/
SMS_API_KEY=your-sms-api-key

# Security Settings
SECURE_SSL_REDIRECT=False
JWT_SECRET_KEY=your-jwt-secret-key

# AI Service Configuration
AI_SERVICE_URL=http://localhost:8001
YOLO_MODEL_PATH=./models/yolov8n.pt
AI_CONFIDENCE_THRESHOLD=0.7

# Monitoring
SENTRY_DSN=your-sentry-dsn
ENVIRONMENT=development

# Grafana
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin123

# File Upload Limits
MAX_FILE_SIZE=52428800  # 50MB
MAX_VIDEO_DURATION=30   # seconds
